{% block title %}TID Travel Scout Competition{% endblock %}
{% block content %}
<style>

@media all and (min-width: 40em) {
#header {
    background: url('/Media/Default/main/hero-images/campaign_travelscout_desktop.jpg') no-repeat center center;
    background-size: cover;
  }

}
@media all and (max-width: 64em) {
#header {
    background: url('/Media/Default/main/hero-images/campaign_travelscout_tablet.jpg') no-repeat center center;
    background-size: cover;
  }

}
@media all and (max-width: 40em) {
#header {
    background: url('/Media/Default/main/hero-images/campaign_travelscout_phone.jpg') no-repeat right center;
    background-size: cover;
  }

}
  
.travel-scout-form label {
  font-size: 1rem;
}
.travel-scout-form .checkbox-list span {
  line-height: 1.1;
  display: inline-block;
  margin-left: 22px
}
.travel-scout-form input[type=checkbox], .travel-scout-form input[type=file], .travel-scout-form input[type=radio], .travel-scout-form select {
  margin: 0;
}
  
.travel-scout-form .row {
  padding-top: 0;
}
.content-item h5 {
  line-height: 1.3;
  margin-bottom: 0.5rem;  
}
  
ol li {
  margin-bottom: 0.75rem; 
}
.travel-scout-themes {
  padding: 1rem 0;
}
.travel-scout-themes img {
  display: block;
  padding-bottom: 0.5rem;
}
