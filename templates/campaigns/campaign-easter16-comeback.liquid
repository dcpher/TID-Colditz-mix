<script type="text/javascript">
  $.sharedCount = function(url, fn) {
    url = encodeURIComponent(url || location.href);
    var domain = "//free.sharedcount.com/";
    var apikey = "8e4b7187bcfca463ceeca1577105f710bf47edd1"
    var arg = {
      data: {
        url : url,
        apikey : apikey
      },
        url: domain,
        cache: true,
        dataType: "json"
    };
    if ('withCredentials' in new XMLHttpRequest) {
        arg.success = fn;
    }
    else {
        var cb = "sc_" + url.replace(/\W/g, '');
        window[cb] = fn;
        arg.jsonpCallback = cb;
        arg.dataType += "p";
    }
    return jQuery.ajax(arg);
  };

  $(document).ready(function($){
    $.sharedCount(location.href, function(data){
      var totalShares = data.Twitter + data.Facebook.share_count;
      if (totalShares <= 20) {
        totalShares = 21;
      }
      $("#total").text(totalShares);
    });
  });
</script>

<script type="text/javascript">
  var socialMedialUrl          = window.location;
  var facebookParamU           = "http://bit.ly/1VfkjV9";
  var twitterParamText         = "Save%2010%25%20on%20your%20travel%20insurance%20with%20%40TIDAustralia%20this%20Easter%20-%20http%3A//bit.ly/1Tkd9kE";

  $(function() {
    var $si = $(".socialicon");
    var targetUrl = "";
    $si.on("click", function() {
      var $this = $(this);
      if ($this.hasClass("facebook")) {
        targetUrl = "http://www.facebook.com/share.php?u=" + facebookParamU;
        window.open(targetUrl);
      }
      else if ($this.hasClass("twitter")) {
        targetUrl = "https://twitter.com/home?status=" + twitterParamText;
        window.open(targetUrl);
      }
      else {
        return;
      }
    });
  });
</script>

